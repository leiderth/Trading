# ============================================
# CONFIGURACIÓN DEL SISTEMA DE TRADING
# Copiar a .env y completar con tus credenciales
# ============================================

# === BROKER PRINCIPAL: QUOTEX ===
QUOTEX_EMAIL=tu_email@ejemplo.com
QUOTEX_PASSWORD=tu_password_seguro
QUOTEX_DEMO_MODE=true  # true para demo, false para real

# === BROKERS ALTERNATIVOS ===

# Binance (Crypto)
BINANCE_API_KEY=tu_api_key
BINANCE_API_SECRET=tu_api_secret
BINANCE_TESTNET=true

# OANDA (Forex)
OANDA_API_KEY=tu_api_key
OANDA_ACCOUNT_ID=tu_account_id
OANDA_ENVIRONMENT=practice  # practice o live

# Interactive Brokers
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 para paper trading, 7496 para live
IB_CLIENT_ID=1

# MetaTrader 5
MT5_LOGIN=tu_login
MT5_PASSWORD=tu_password
MT5_SERVER=tu_servidor

# === BASE DE DATOS ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=password_seguro

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === TELEGRAM ALERTS ===
TELEGRAM_BOT_TOKEN=tu_bot_token
TELEGRAM_CHAT_ID=tu_chat_id

# === CONFIGURACIÓN DE TRADING ===
MAX_RISK_PER_TRADE=0.02  # 2% máximo por operación
MAX_DRAWDOWN=0.15  # 15% drawdown máximo
MAX_POSITIONS=3  # Máximo 3 posiciones simultáneas
INITIAL_CAPITAL=10000  # Capital inicial en USD

# === CONFIGURACIÓN DE IA ===
RL_LEARNING_RATE=0.0003
RL_GAMMA=0.99
RL_BATCH_SIZE=64
LSTM_LOOKBACK=100
CONFIDENCE_THRESHOLD=0.70  # 70% confianza mínima para operar

# === TIMEFRAMES ===
PRIMARY_TIMEFRAME=5m  # Timeframe principal
SECONDARY_TIMEFRAMES=1m,15m,1h  # Timeframes adicionales

# === SÍMBOLOS A OPERAR ===
TRADING_SYMBOLS=EUR/USD,GBP/USD,BTC/USD,ETH/USD

# === MODO DE OPERACIÓN ===
TRADING_MODE=demo  # demo, paper, live
AUTO_TRADING=false  # true para trading automático
ENABLE_RL_TRAINING=true  # Entrenar modelo en tiempo real

# === LOGGING ===
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
LOG_TO_CONSOLE=true

# === SEGURIDAD ===
ENABLE_KILL_SWITCH=true  # Pausa automática en drawdown crítico
MAX_CONSECUTIVE_LOSSES=3  # Máximo de pérdidas consecutivas
EMERGENCY_CLOSE_ALL=false  # Cerrar todas las posiciones inmediatamente
